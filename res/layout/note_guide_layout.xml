<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/list_view_text_margin"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/new_notes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_view_text_margin"
            android:layout_marginTop="@dimen/list_view_text_margin"
            android:textColor="@color/list_time_color"
            android:textSize="@dimen/time_tv_text_size"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/time_tv"
            android:layout_below="@id/time_tv"
            android:visibility="visible" >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingBottom="@dimen/list_view_text_margin"
                android:paddingTop="@dimen/list_view_text_margin"
                android:singleLine="true"
                android:text="@string/new_notes_label"
                android:textColor="@color/list_title_color"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff" >
            <ImageView
                android:id="@+id/no_note_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_alignParentLeft="true"
                
                android:background="@drawable/no_note_pic" />
			<!-- android:layout_above="@id/no_notes_new" -->
          
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>